<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00000000">
        <LinearLayout
            style="@style/vertical_layout"
            android:layout_weight="1">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <LinearLayout
                style="@style/horizontal_layout"
                android:layout_weight="1">

            </LinearLayout>
            <LinearLayout
                style="@style/horizontal_layout"
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:id="@+id/auto_update_title_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="检测到最新版本V1.1，点击立即更新"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/auto_update_new_version_info"
                        android:visibility="visible"
                        android:layout_marginTop="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/auto_update_new_version_info1"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:textSize="12dp"
                            android:textColor="@color/setting_hint_color"
                            tools:text="检测到最新版本V1.1，点击立即更新"/>
                        <TextView
                            android:layout_marginTop="8dp"
                            android:id="@+id/auto_update_new_version_info2"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:textSize="12dp"
                            android:textColor="@color/setting_hint_color"
                            tools:text="检测到最新版本V1.1，点击立即更新"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/update_progress_bar_layout"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ProgressBar
                            android:visibility="visible"
                            android:id="@+id/updating_progress_bar"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:progress="0"
                            android:progressDrawable="@drawable/update_progressbar_bg"/>
                        <TextView
                            android:textSize="12dp"
                            android:text="逗娱正在努力更新中～"
                            android:gravity="center"
                            android:textColor="@color/setting_hint_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/update_btn_layout"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp">
                    <LinearLayout
                        style="@style/horizontal_layout"
                        android:layout_weight="1"></LinearLayout>

                    <TextView
                        android:id="@+id/update_dialog_install_btn_later"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:text="稍后更新"
                        android:visibility="visible"
                        android:gravity="center"
                        android:textColor="@color/setting_hint_color"
                        android:background="@drawable/update_gray_bg"/>
                    <View
                        android:id="@+id/update_btn_divide_view"
                        android:layout_width="0dp"
                        android:visibility="visible"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"/>
                    <TextView
                        android:id="@+id/update_dialog_install_btn_rightnow"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:text="立即更新"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/update_red_bg"/>
                    <LinearLayout
                        style="@style/horizontal_layout"
                        android:layout_weight="1"></LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/horizontal_layout"
                android:layout_weight="1">

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            style="@style/vertical_layout"
            android:layout_weight="1.5">
        </LinearLayout>
    </LinearLayout>

</layout>