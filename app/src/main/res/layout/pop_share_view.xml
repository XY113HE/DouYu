<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/pop_view_bg">
        <LinearLayout
            style="@style/vertical_layout"
            android:layout_weight="1">
        </LinearLayout>
        <LinearLayout
            style="@style/vertical_layout"
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:background="@drawable/share_pop_bg"
            android:orientation="vertical">
            <LinearLayout
                style="@style/vertical_layout"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/share_wxcircle_btn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/umeng_socialize_wxcircle"/>
                        <TextView
                            android:id="@+id/share_wxcircle_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="朋友圈"
                            android:textSize="12dp"
                            android:textColor="@color/main_text_color"
                            android:gravity="center"/>
                    </LinearLayout>
                    <View
                        style="@style/horizontal_layout"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/share_wechat_btn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/umeng_socialize_wechat"/>
                        <TextView
                            android:id="@+id/share_wechat_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="微信"
                            android:textSize="12dp"
                            android:textColor="@color/main_text_color"
                            android:gravity="center"/>
                    </LinearLayout>



                    <View
                        style="@style/horizontal_layout"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/share_qq_btn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/umeng_socialize_qq"/>
                        <TextView
                            android:id="@+id/share_qq_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="QQ"
                            android:textSize="12dp"
                            android:textColor="@color/main_text_color"
                            android:gravity="center"/>
                    </LinearLayout>

                    <View
                        style="@style/horizontal_layout"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/share_sina_btn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/umeng_socialize_sina"/>
                        <TextView
                            android:id="@+id/share_sina_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="微博"
                            android:textSize="12dp"
                            android:textColor="@color/main_text_color"
                            android:gravity="center"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/share_cancel_btn"
                android:text="取消"
                android:textSize="14dp"
                android:textColor="@color/main_text_color"
                android:background="@color/white"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</layout>