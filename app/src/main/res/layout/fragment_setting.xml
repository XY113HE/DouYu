<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/setting_pop_bg">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="20dp">
            <LinearLayout
                android:layout_marginTop="35dp"
                android:id="@+id/auto_download_layout"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="25dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/auto_download_icon"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="24dp"
                        android:layout_marginLeft="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="自动更新"
                            android:textColor="@color/setting_pop_text_color"
                            android:textSize="14dp"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/switch_btn_open"
                        android:layout_width="48dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="3dp">
                        <View
                            android:id="@+id/setting_tog_btn"
                            android:layout_width="48dp"
                            android:layout_height="18dp"
                            android:background="@drawable/toggle_btn_bg"/>
                        <View
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/toggle_btn"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/switch_btn_close"
                        android:visibility="gone"
                        android:layout_width="48dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="3dp">
                        <View
                            android:id="@+id/setting_tog_btn_close"
                            android:layout_width="48dp"
                            android:layout_height="18dp"
                            android:background="@drawable/toggle_btn_close_bg"/>
                        <View
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/toggle_btn_close"/>
                    </RelativeLayout>

                </LinearLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仅Wi-Fi网络下自动更新"
                    android:textSize="10dp"
                    android:layout_marginLeft="39dp"
                    android:textColor="@color/setting_hint_color" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_clear_cache_layout"
                android:layout_width="match_parent"
                android:layout_height="74dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/setting_clear_cache_icon"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="清除缓存"
                    android:textSize="14dp"
                    android:textColor="@color/setting_pop_text_color"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/setting_clear_cache_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0.0B"
                    android:textColor="@color/setting_pop_text_color"
                    android:gravity="center_vertical"
                    android:textSize="14dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/setting_about_us_layout"
                android:layout_width="match_parent"
                android:layout_height="74dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/setting_about_us_icon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="关于我们"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/setting_pop_text_color"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/setting_login_test_layout"
                android:layout_width="match_parent"
                android:layout_height="74dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/setting_about_us_icon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="登录测试"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/setting_pop_text_color"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/setting_close_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</layout>